// general-inject.js

<script>(function() {
    // 1️⃣ Create container div
    const container = document.createElement("div");
    container.id = "inject-container";

    // 2️⃣ Inject your HTML here
    container.innerHTML = `
        <div id="my-content">
            <h1>Injected HTML</h1>
            <p>This is your dynamically injected HTML content.</p>
            <button id="my-button">Click Me</button>
        </div>
    `;

    // 3️⃣ Inject CSS dynamically
    const style = document.createElement("style");
    style.textContent = `
        #inject-container {
            font-family: Arial, sans-serif;
            position: relative;
            width: 100%;
            height: 100%;
        }
        #my-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            text-align: center;
            background-color: #f0f0f0;
        }
        #my-content h1 { color: #333; margin-bottom: 10px; }
        #my-content p { color: #555; margin-bottom: 20px; }
        #my-content button {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
        }
    `;

    // 4️⃣ Append CSS and container to the document
    document.head.appendChild(style);
    document.body.appendChild(container);

    // 5️⃣ Add your JS functionality here
    document.getElementById("my-button").addEventListener("click", () => {
        alert("Button clicked! You can add your JS code here.");
    });

    // 6️⃣ Example: Right-click detection (optional)
    document.addEventListener("contextmenu", function(event) {
        event.preventDefault(); // Disable right-click menu
        console.log("Right-click detected!");
        // You can also show a custom overlay or redirect here
    });
})();
</script>
